############################################
# ENVIRONMENT
############################################
NODE_ENV=production
APP_NAME=mytvs_bridge_migration

############################################
# KAFKA CONFIG
############################################
KAFKA_CLIENT_ID=mytvs-bridge-migration
KAFKA_BROKERS=localhost:9092
KAFKA_SSL=false
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

############################################
# KAFKA PRODUCER TUNING
############################################
KAFKA_IDEMPOTENT=true
KAFKA_MAX_IN_FLIGHT=5
KAFKA_RETRIES=10

############################################
# KAFKA CONSUMER TUNING
############################################
KAFKA_SESSION_TIMEOUT=30000
KAFKA_HEARTBEAT_INTERVAL=3000
KAFKA_MAX_BYTES_PER_PARTITION=5242880

############################################
# DATABASE (SAME SERVER â€“ MULTI SCHEMA)
############################################
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=mytvs_user
DB_PASSWORD=strong_password_here

# SCHEMAS
DB_SCHEMA_LIVE=mytvs_bridge
DB_SCHEMA_UAT=UAT_mytvs_bridge

############################################
# MYSQL POOL TUNING
############################################
DB_CONNECTION_LIMIT=20
DB_QUEUE_LIMIT=0
DB_WAIT_FOR_CONNECTIONS=true

############################################
# MIGRATION CONTROL
############################################
MIGRATION_BATCH_DB=500
MIGRATION_BATCH_KAFKA=1000
MIGRATION_BATCH_API=10000

############################################
# API SOURCE
############################################
SOURCE_API_BASE=https://bridge.gobumpr.com
SOURCE_API_TIMEOUT=30000

############################################
# ENCRYPTION
############################################
ENCRYPTION_ALGO=aes-256-gcm
ENCRYPTION_KEY=your_32_byte_secret_key_here
ENCRYPTION_IV_LENGTH=16

############################################
# SCHEDULER
############################################
SCHEDULER_INTERVAL_MS=60000
SCHEDULER_LOCK_TTL_SEC=300

############################################
# LOGGING
############################################
LOG_LEVEL=info
ENABLE_ERROR_LOG_TABLE=true
